{
  // "parser": "babel-eslint",
  "plugins": ["jest", "prettier"],
  "extends": ["standard", "eslint:recommended", "plugin:jest/recommended", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": false,
      "modules": true
    },
    "sourceType": "module",
    "useJSXTextNode": false
  },
  "rules": {
    "max-len": ["error", 140],
    "no-unused-vars": [2, { "args": "none" }],
    "prettier/prettier": "error"
  },
  "globals": {
    "__DEV__": true
  }
}
